<br>
<h1><%= @category.title %> Rankings</h1>
<h5><%= link_to "New #{@category.title} Ranking", new_category_ranking_path(@category) %> :
    <%= @category_count %> Rankings</h5>
<hr>

<% @category.rankings.each do |ranking| %>
    <ol>
        <% ranking.selections.each do |selection| %>
            <li><%= selection.player.name %></li>
        <% end %>
        <br>
        <h6><%= link_to "Honorable Mentions", ranking_path(ranking) %></h6>
        <h6>created by: <%= link_to ranking.user.username, user_path(ranking.user.id) %></h6>
    </ol>
    <hr>
<% end %>
