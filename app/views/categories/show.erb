<h1><%= @category.title %> Rankings</h1>
<h4><%= link_to "New #{@category.title} Ranking", new_category_ranking_path(@category) %> :
    <%= @category_count %> Rankings</h4>
<hr>

<% @category.rankings.each do |ranking| %>
    <ol>
        <% ranking.selections.each do |selection| %>
            <li><%= selection.player.name %></li>
        <% end %>

        <h4><%= link_to "Honorable Mentions", ranking_path(ranking) %></h4>
        <h5>created by: <%= link_to ranking.user.username, user_path(ranking.user.id) %></h5>
    </ol>
    <hr>
<% end %>
